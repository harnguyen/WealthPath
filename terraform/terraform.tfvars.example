# Copy this to terraform.tfvars and fill in your values

# DigitalOcean Configuration
# Set your API token as environment variable:
# export DIGITALOCEAN_TOKEN="your-api-token"

# Droplet settings
droplet_name = "wealthpath"
region       = "sgp1"        # sgp1=Singapore, nyc1=New York, sfo3=San Francisco, lon1=London
size         = "s-1vcpu-2gb" # $12/month - 1 vCPU, 2GB RAM, 50GB SSD

# Available sizes:
# s-1vcpu-512mb  = $4/mo  (512MB RAM)
# s-1vcpu-1gb    = $6/mo  (1GB RAM)
# s-1vcpu-2gb    = $12/mo (2GB RAM) - recommended
# s-2vcpu-2gb    = $18/mo (2 vCPU, 2GB RAM)
# s-2vcpu-4gb    = $24/mo (2 vCPU, 4GB RAM)

# Your SSH public key (cat ~/.ssh/id_ed25519.pub or cat ~/.ssh/id_rsa.pub)
ssh_public_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5..."

# Your domain (optional - leave empty to use sslip.io auto-domain)
# Examples: wealthpath.duckdns.org, myapp.example.com
domain = ""

# SSL Configuration
use_ssl     = true
admin_email = "your-email@example.com"

# Enable static IP (recommended for production)
enable_reserved_ip = true
