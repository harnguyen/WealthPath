# Copy this to terraform.tfvars and fill in your values

# AWS Configuration
# Uses ~/.aws/credentials or environment variables:
# export AWS_ACCESS_KEY_ID="xxx"
# export AWS_SECRET_ACCESS_KEY="xxx"
aws_region        = "us-east-1"
aws_instance_type = "t3.small"  # t3.micro = free tier, t3.small = $15/mo (recommended)

# Your SSH public key (cat ~/.ssh/id_rsa.pub or cat ~/.ssh/id_ed25519.pub)
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQC..."

# Your domain (optional - leave empty to use sslip.io auto-domain)
# Examples: wealthpath.duckdns.org, myapp.example.com
domain = ""

# SSL Configuration
use_ssl    = true
use_zerossl = false  # Set true for DuckDNS domains
admin_email = "your-email@example.com"
